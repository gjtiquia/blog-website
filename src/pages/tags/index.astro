---
import { CenterProseContainer, HeaderTitle } from "@src/components";
import BaseLayout from "@src/layouts/BaseLayout.astro";
import { getTags } from "@src/sanity";

const tags = await getTags();
---

<BaseLayout title={"Tags"}>
    <CenterProseContainer>
        <HeaderTitle title="Tags" className="mb-6" />
        <ul class="flex gap-4 flex-wrap">
            {
                tags.map((tag) => (
                    <li>
                        <a
                            class="bg-slate-400 hover:bg-slate-500 active:bg-slate-600 text-slate-50 dark:bg-gray-500 dark:text-gray-200 dark:hover:bg-gray-400 dark:active:bg-gray-300 px-4 py-1 rounded-full"
                            href={`/tag/${tag.slug.current}`}
                        >
                            {tag.name}
                        </a>
                    </li>
                ))
            }
        </ul>
    </CenterProseContainer>
</BaseLayout>
