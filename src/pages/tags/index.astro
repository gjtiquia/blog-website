---
import { CenterProseContainer } from "@src/components";
import BaseLayout from "@src/layouts/BaseLayout.astro";
import { getTags } from "@src/sanity";

const tags = await getTags();
---

<BaseLayout title={"Tags"}>
    <CenterProseContainer>
        <h1 class="font-bold text-4xl mb-6">{"Tags"}</h1>
        <div class="flex gap-4 flex-wrap">
            {
                tags.map((tag) => (
                    <a
                        class="bg-slate-400 hover:bg-slate-500 active:bg-slate-600 text-slate-50 px-4 py-1 rounded-full"
                        href={`/tag/${tag.slug.current}`}
                    >
                        {tag.name}
                    </a>
                ))
            }
        </div>
    </CenterProseContainer>
</BaseLayout>
